/* Put any additional CSS here */

body{
    margin: 0px;
}

#header {
    position: fixed;
    background-color:white;
    top: 0;
    left: 0;
    width: 100%;
    text-align: center;
    color: black;
    margin-top: 0px;
    text-transform: uppercase;
    font-size: 32px;
    font-weight: bold;
    z-index:1;
}

#header-text {
    position: fixed;
    margin-top: 0px;
    background-color:white;
    width: 100%;
    text-align: center;
    font-size: 16px;
    color: rgba(0,0,0,0.3);
}

#theLine {
    background-color:white;
    height: 2px;
    background: black;
    background: -webkit-gradient(linear, 0 0, 100% 0, from(white), to(white), color-stop(50%, black));
}


#toolbar {
    position: fixed;
    margin-left:40px;
    margin-top: -75px;
    width:90%;
    display: inline-block;
    z-index:2;
    
}

@media screen and (min-width: 0px) and (min-device-width: 0px) {
    #smallTool{
        display: inline-block;
    }

    .menuSelector{
        display: inline-block;
    }
    
    #menuBar:hover {
        width: 34px;
        
    }
    
    .viewSelector {
        display: none;
    }
    
    #filter {
        display: none;
    }
    
    #nav{
        display: none;
    }
    
    #nav ul{
	    list-style:none;
	    position:relative;
	    margin:0;
	    padding:0;
	    background-color: white;
    }

#nav ul a
{
	display:block;
	color:#333;
	text-decoration:none;
	font-weight:700;
	font-size:12px;
	line-height:26px;
	padding:0 15px;
}

#nav ul li
{
	position:relative;
	margin:0;
	padding:0
}

#nav ul li.current-menu-item
{
	background:#ddd
}

#nav ul li:hover
{
	background:#f6f6f6
}

#nav ul ul
{
	display:none;
	position:absolute;
	top:100%;
	left:0;
	background:#fff;
	padding:0
}

#nav ul ul li
{
	float:none;
	width:130px
}

#nav ul ul a
{
	line-height:18px;
	padding-top: 4px;
}

#nav ul ul ul
{
	top:0;
	left:100%
}

#nav ul li:hover > ul
{
	display:block
}

    .smallStar{
        width: 16px;
    }
}

@media screen and (min-width: 760px) and (min-device-width: 760px) {
#smallTool {
    display: none;
}

.viewSelector {
    margin-right: 10px;
    display: inline-block;
}

.viewSelector:hover {
    width: 33px;
    opacity: 1;
}

.viewSelectorInactive {
    opacity: 0.5;
}

#filter {
    float:right;
    display: inline-block;
}

.filterStar{
    display: inline-block;
    margin-top: 8px;
    margin-right:-4px;
    width:22px;
    height:22px;
}

#filterTag {
    display: inline-block;
    color: rgba(0,0,0,0.5);
}
}

#app-container {
    margin-top : 80px;
    margin-left: 20px;
    margin-bottom:20px;
}

.hidden {
    display: none;
}

/*CSS for gridview based photos!========================*/
.imageDiv {
    border: 3px solid;
    width: 240px;
    height: 230px;
    margin-right: 20px;
    float: left;
    margin-bottom: 20px;
}


.image{
    width:240px;
    height: 180px;
}

.imageDiv div{
    margin-left:10px;
}



.imageDiv span{
    margin-left: 10px;
}

.imageDivList span{
    margin-top: 40px;
    margin-left: 70px;
    position: absolute;
    z-index:-1;
}

.ratingStars {
    width: 18px;
}




@media screen and (min-width: 100px) and (min-device-width: 100px) {
.imageDivList {
    border: 3px solid;
    width: 240px;
    height: 180px;
    clear:both;
    margin-bottom: 40px;
    margin-left: 2px;
}

.imageDivList div{
    margin-left:250px;
    margin-top: -150px;
    position:relative;
    z-index:0;
}
}

@media screen and (min-width: 360px) and (min-device-width: 360px) {

.imageDivList {
    border: 3px solid;
    width: 240px;
    height: 180px;
    clear:both;
    margin-bottom: 40px;
    margin-left: 20px;
}

.imageDivList div{
    margin-left:280px;
    margin-top: -150px;
    position:relative;
    z-index:0;
}
}

.files-input {
    margin-top: 8px;
    clear:both;
    display:block;
}



footer {
    display: inline-block;
    bottom: 0px;
    width: 100%;
}
